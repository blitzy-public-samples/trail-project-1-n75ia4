# API Configuration
# Base URL for backend API endpoints
VITE_API_BASE_URL=http://localhost:3000
# API version for versioned endpoints
VITE_API_VERSION=v1
# API request timeout in milliseconds
VITE_API_TIMEOUT=30000
# Maximum API request retries
VITE_API_MAX_RETRIES=3
# API request retry delay in milliseconds
VITE_API_RETRY_DELAY=1000

# WebSocket Configuration
# WebSocket server URL for real-time updates
VITE_WS_HOST=localhost:3000
# WebSocket heartbeat interval in milliseconds
VITE_WS_HEARTBEAT_INTERVAL=30000
# WebSocket reconnection interval in milliseconds
VITE_WS_RECONNECT_INTERVAL=5000
# Maximum WebSocket reconnection attempts
VITE_WS_MAX_RETRIES=5
# WebSocket connection timeout in milliseconds
VITE_WS_CONNECTION_TIMEOUT=10000

# Authentication Configuration
# SSO provider client ID
VITE_SSO_CLIENT_ID=your-sso-client-id
# SSO provider client secret
VITE_SSO_CLIENT_SECRET=your-sso-client-secret
# SSO provider authorization endpoint
VITE_SSO_AUTHORIZE_ENDPOINT=https://sso.example.com/oauth2/authorize
# SSO provider token endpoint
VITE_SSO_TOKEN_ENDPOINT=https://sso.example.com/oauth2/token
# OAuth2 redirect URI
VITE_SSO_REDIRECT_URI=http://localhost:5173/auth/callback
# Comma-separated list of allowed authentication domains
VITE_AUTH_ALLOWED_DOMAINS=example.com,company.com
# Token encryption key for secure storage
VITE_TOKEN_ENCRYPTION_KEY=your-secure-encryption-key

# Security Configuration
# CSRF token header name
VITE_CSRF_TOKEN_HEADER=X-CSRF-Token
# Enable secure cookie attributes
VITE_SECURE_COOKIE_ENABLED=true
# Session timeout in milliseconds (30 minutes)
VITE_SESSION_TIMEOUT=1800000
# Token refresh threshold in milliseconds (5 minutes)
VITE_TOKEN_REFRESH_THRESHOLD=300000

# Application Configuration
# Application version
VITE_APP_VERSION=1.0.0
# Enable debug mode (development only)
VITE_DEBUG_MODE=false
# Default language
VITE_DEFAULT_LANGUAGE=en
# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,es,fr
# API rate limit per minute
VITE_API_RATE_LIMIT=100

# Feature Flags
# Enable WebSocket real-time updates
VITE_FEATURE_WEBSOCKET_ENABLED=true
# Enable SSO authentication
VITE_FEATURE_SSO_ENABLED=true
# Enable strong password enforcement
VITE_FEATURE_STRONG_PASSWORD=true
# Enable multi-factor authentication
VITE_FEATURE_MFA_ENABLED=true