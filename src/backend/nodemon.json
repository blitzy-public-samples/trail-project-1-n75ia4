{
  "watch": ["src"],
  "ext": ".ts,.js,.json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "tests/**/*",
    "coverage/**/*",
    "dist/**/*",
    "node_modules/**/*"
  ],
  "exec": "ts-node -r tsconfig-paths/register src/app.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "events": {
    "restart": "echo \"[Nodemon] App restarted due to changes\""
  },
  "delay": "1500",
  "verbose": true,
  "legacyWatch": false
}